<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_A700</item>
        <item name="colorAccent">@color/blue_A700</item>
        <item name="colorSecondary">@color/blue_A700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/grey_100</item>
        <item name="android:statusBarColor">@color/grey_100</item>
    </style>

    <style name="PdfTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/grey_500</item>
        <item name="colorPrimaryDark">@color/grey_100</item>
        <item name="colorAccent">@color/blue_A700</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/grey_100</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_left_black</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextColor">@color/grey_900</item>
        <item name="titleTextAppearance">@style/Headline6</item>
    </style>

    <style name="Screen">
        <item name="android:background">@color/grey_100</item>
    </style>

</resources>